<% content_for(:topnav_bg) { 'bg-default' } %>

<div class="main-content" id="panel">
  <%= render partial: 'tenants/header', locals: { tenant: @tenant } %>
  <!-- Page content -->
  <div class="container-fluid mt--6">
      <div class="row">
        <div class="col-xl-4 order-xl-2">
          <%= render partial: 'tenants/summary_card', locals: { tenant: @tenant, paiement: @tenant_paiements.first } %>
        </div>
        <div class="col-xl-8 order-xl-1">
            <div class="card">
                <div class="card-header">
                    <div class="row d-flex justify-content-between">
                        <div class="col-8">
                            <h3 class="mb-0"> Liste des paiements de Mr : <%= @tenant.full_name %> </h3>
                        </div>
                        <div class="col-2 text-right">
                            <%= link_to tenants_path, class:"btn btn-sm btn-default" do  %>
                                <i class="fa fa-arrow-left"></i> Retour
                            <% end %>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <%= render partial: 'tenants/paiements', locals: {
                            user: @tenant
                        } 
                    %>
                </div>
            </div>
        </div>
      </div>
    <%= render 'shared/footer' %>
  </div>