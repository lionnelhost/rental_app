<div class="header bg-primary pb-6">
    <div class="container-fluid">
        <div class="header-body">
            <%= render partial: 'shared/header', locals: {
                    icon: 'building',
                    breadcrumb_1: 'Appartements',
                    breadcrumb_2: 'Liste',
                    main_url: apartments_path,
                    breadcrumb_url: '#'
                }
            %>
        </div>
    </div>
</div>

<div class="container-fluid mt--6">
    <div class="row">
        <div class="col col-sm">
            <div class="card">
                <div class="card-header border-0">
                    <div class="row mb-2">
                        <div class="col-12 col-lg-6">
                            <% if notice %>
                                <%= render partial: 'shared/alerts/dismissable', locals: {
                                    message: notice,
                                    icon_class: 'ni ni-like-2',
                                    alert_type: 'alert-success',
                                    dismissible: true
                                } %>
                            <% end %>
                        </div>
                    </div>
                    <h3 class="mb-0">Liste des Appartements </h3>
                    <div class="text-right">
                        <%= link_to new_apartment_path, class:"btn btn-sm btn-primary" do  %>
                            <i class="fa fa-plus"></i> Ajouter
                        <% end %>
                    </div>
                </div>
                <!-- Light table -->
                <div class="table-responsive">
                    <!-- Projects table -->
                    <table class="table align-items-center table-flush">
                        <thead class="thead-light">
                            <tr>
                                <th scope="col">N-</th>
                                <th scope="col">Addrese</th>
                                <th scope="col">Nombre de pieces</th>
                                <th scope="col">Superficie</th>
                                <th scope="col">loyer</th>
                                <th scope="col">caution</th>
                                <th scope="col">Description</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% @apartments.each_with_index do |apartment, index| 
                                edit_link = edit_apartment_path(apartment)
                                show_link = apartment_path(apartment)
                            %>
                                <tr>
                                    <th scope="row">
                                        <%= index + 1 %>
                                    </th>
                                    <td>
                                        <%= apartment.address %>
                                    </td>
                                    <td>
                                        <%= apartment.nb_pieces %>
                                    </td>
                                    <td>
                                        <%= apartment.areas %>
                                    </td>
                                    <td>
                                        <%= apartment.rent %>
                                    </td>
                                    <td>
                                        <%= apartment.caution %>
                                    </td>
                                    <td><%= apartment.description[0..10] %>
                                    <td class="text-right">
                                        <%= link_to edit_link, class: "btn btn-sm btn-icon-only text-info", role:"button" do %>
                                            <%= fa_icon 'edit' %>
                                        <% end %>
                                        <a class="btn btn-sm btn-icon-only text-danger button-delete" 
                                            href="javascript:;" 
                                            role="button"
                                            modal-element-title="l'appartement"
                                            modal-element="<%= apartment.id %>"
                                            modal-url="<%= show_link %>">
                                            <%= fa_icon 'trash' %>
                                        </a>
                                    </td>
                                </tr>
                            <% end %>
                        </tbody>
                    </table>
                </div>
                <%= paginate @apartments %>
                <%= render  "shared/delete_modal" %>
            </div>
        </div>
    </div>
</div>

