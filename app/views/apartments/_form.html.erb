<%= simple_form_for @apartment, url: url, authenticity_token: true, html: { method: method, class: "form" } do |f| %>
  <% if @apartment.errors.any? %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <strong>There was an error saving the record:</strong>
      <ul>
        <% @apartment.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  <% end %>
  <div class="pl-lg-4">

    <div class="row">
      <div class="col-lg-6">
        <div class="form-group">
          <%= f.input :address, autofocus: true, class: "form-control" %>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="form-group">
          <%= f.input :nb_pieces, as: :numeric, autofocus: true, class: "form-control" %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-6">
        <div class="form-group">
          <%= f.input :areas, as: :numeric, autofocus: true, class: "form-control" %>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="form-group">
          <%= f.input :rent, as: :numeric, autofocus: true, autocomplete: "rent", class: "form-control" %>
        </div>
      </div>
    </div>
    <div class="row">
        <div class="col-lg-6">
            <div class="form-group">
            <%= f.input :caution, as: :numeric, autofocus: true, autocomplete: "caution", class: "form-control" %>
            </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg">
        <div class="form-group">
          <%= f.input :description,  :as => :text, :input_html => { 'rows' => 5, 'cols' => 10 }, autofocus: true, autocomplete: "description", class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="pl-lg-4">
        <div class="row">
        <div class="col-lg-6">
            <%= link_to apartments_path, class: "btn btn-outline-default" do %>
            Annuler
            <% end %>
            <%= f.submit "Enregistrer", class: "btn  btn-primary" %>
        </div>
        <div class="col-lg-6"></div>
        </div>
    </div>

  </div>
<% end %>